@typeparam T

<AeDateInput @bind-Value="PropertyValue"
             Label="@GetLabel()"
             ValidationFor="PropertyInfo.GenerateValidatorFunction<DateTime>(Instance)"
             />

@code {

    //<AeInputText />

    [Parameter]
    public System.Reflection.PropertyInfo PropertyInfo { get; set; }

    [Parameter]
    public T Instance { get; set; }

    public DateTime PropertyValue
    {
        get => (DateTime)PropertyInfo.GetValue(Instance);
        set
        {
            PropertyInfo.SetValue(Instance, value);
        }
    }

    private string GetLabel() => PropertyInfo.Name + (IsRequired() ? "" : " (Optional)");

    private bool IsRequired()
    {
        return System.ComponentModel.DataAnnotations.RequiredAttribute.IsDefined(PropertyInfo, typeof(System.ComponentModel.DataAnnotations.RequiredAttribute));
    }

}
