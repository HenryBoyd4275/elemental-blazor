@typeparam T
@inherits Elemental.Data.AeInputBase<T>

@using Microsoft.AspNetCore.Components.Forms

    <div class="e e-form-control-wrapper">
        @if (!string.IsNullOrWhiteSpace(Label))
        {
            <label class="e e-form-control-label" for="@Id">@Label</label>
        }
        @if (UseTextArea)
        {
            <textarea class="e e-form-control" id="@Id" @bind="@CurrentValue" />
        }
        else
        {
            @*<input class="e e-form-control" id="@Id" @bind="@CurrentValue" />*@
            <input class="e e-form-control" id="@Id" @bind="@CurrentValue" />
        }
        <div class="e e-form-control-validation">
            <ValidationMessage For="@ValidationFor" />
        </div>
    </div>
