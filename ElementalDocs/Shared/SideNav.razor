<Flex Vertical class="sidenav">
    @foreach(var link in sidenavLinks)
    {
        <NavLink class="nav-link" href="@link.Link" Match="NavLinkMatch.All">
            <Typography>@link.Label</Typography>
        </NavLink>
    }
</Flex>

@code {

    private List<dynamic> sidenavLinks = new List<dynamic>()
    {
        new { Label = "Home", Link = "/" },
        new { Label = "Buttons", Link = "/buttons" },
        new { Label = "Inputs", Link = "/inputs" },
        new { Label = "Searchbar", Link = "/search" },
        new { Label = "Dropdown", Link = "/dropdown" },
        new { Label = "Table", Link = "/table" },
        new { Label = "ModelForm", Link = "/modelform" },
        new { Label = "BlazorForm", Link = "/blazorform" },
        new { Label = "Pagination", Link = "/pagination" },
        new { Label = "Export to CSV", Link = "/export" },
    };
}